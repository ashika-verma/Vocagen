<SimpleLabel>: 
    color: 1, 1, 1, 1
    font_name: 'data/pixeljosh6'
    font_size: '15sp'

<CheckboxPopup>:
    size_hint: .7, .7
    auto_dismiss: True
    separator_color: .9,.4,.2,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/pixeljosh6"
    title_size: "20sp"


<VolumePopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "MIXER"
    separator_color: .9,.4,.2,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/pixeljosh6"
    title_size: "20sp"
    GridLayout:
        cols: 3
        SimpleLabel:
            text: "melody"
        Slider:
            id: melody
            value:50
            min: 0
            max: 100
            step: 1
            orientation: 'horizontal'
            on_value: root.slider_callback("melody", melody.value)
        SimpleLabel:
            text: str(melody.value)


        SimpleLabel:
            text: "high voice"
        Slider:
            id: alto
            min: 0
            max: 100
            value:50
            step: 1
            on_value: root.slider_callback("alto", alto.value)
            orientation: 'horizontal'
        SimpleLabel:
            text: str(alto.value)

        SimpleLabel:
            text: "mid voice"
        Slider:
            id: tenor
            min: 0
            max: 100
            value:50
            step: 1
            on_value: root.slider_callback("tenor", tenor.value)
            orientation: 'horizontal'
        SimpleLabel:
            text: str(tenor.value)
        
        SimpleLabel:
            text: "low voice"
        Slider:
            id: bass
            min: 0
            max: 100
            value:50
            on_value: root.slider_callback("bass", bass.value)
            step: 1
            orientation: 'horizontal'
        SimpleLabel:
            text: str(bass.value)
<RecordPopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "RECORD"
    separator_color: .9,.4,.2,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/pixeljosh6"
    title_size: "20sp"
    GridLayout:
        cols: 4
        Label:
        Label:
        Label:
        MyButton:
            text: "record"
            font_size: '15sp'
            on_press: 
                self.text="recording"
                root.record_callback()
            on_release: 
                self.text="record"
                root.record_callback()
        Label:
        Label:
        Label:
        MyButton:
            text: "play"
            font_size: '15sp'
            on_release: root.play_callback()
        


<MyButton@Button>:
    font_name: 'data/pixeljosh6'
    font_size: '20sp'
    background_color: 1, 0, 0, 1
    canvas.before:
        Color:
            rgba: .5, 1, 1, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<MyToggleButton@ToggleButton>:
    font_name: 'data/pixeljosh6'
    font_size: '20sp'
    background_color: 1, 0, 0, 1
    group: 'storage'
    canvas.before:
        Color:
            rgba: .5, 1, 1, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<RecordImage@Image>:
    source: "./data/scene/record.png"
    size: self.texture_size

<StoragePopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "STORAGE"
    separator_color: .9,.4,.2,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/pixeljosh6"
    title_size: "20sp"
    GridLayout:
        cols: 1
        GridLayout:
            cols: 5
            RecordImage
            RecordImage
            RecordImage
            RecordImage
            RecordImage
            MyToggleButton:
                text: "0"
            MyToggleButton:
                text: "1"
            MyToggleButton:
                text: "2"
            MyToggleButton:
                text: "3"
            MyToggleButton:
                text: "4"
            
        GridLayout:
            cols: 5
            RecordImage
            RecordImage
            RecordImage
            RecordImage
            RecordImage
            MyToggleButton:
                text: "5"
            MyToggleButton:
                text: "6"
            MyToggleButton:
                text: "7"
            MyToggleButton:
                text: "8"
            MyToggleButton:
                text: "9"
        GridLayout:
            cols: 2
            MyButton:
                text: "PLAY"
                on_press: root.on_play_button_press()
            MyButton:
                text: "SAVE"
                on_press: root.on_save_button_press()



<StartPopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "VOCAGEN"
    separator_color: .9,0,0,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/Ballsont"
    title_size: "100sp"
    BoxLayout:
        orientation: "vertical"
        MyButton:
            text: "START"
            on_release: root.dismiss()
        SimpleLabel:
            text: "an ashika, anders, jake production"

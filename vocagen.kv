#:import Factory kivy.factory.Factory
#: import CheckBox kivy.uix.checkbox 
<SimpleLabel@Label>: 
    color: 1, 1, 1, 1
    font_name: 'data/pixeljosh6'
    font_size: '15sp'
<PressLabel@ButtonBehavior+Label>: 
    color: 1, 1, 1, 1
    font_name: 'data/pixeljosh6'
    font_size: '15sp'

<LabelCheckBox@BoxLayout>
    text: ''
    group: ''
    CheckBox:
        id: cb
        group: root.group
    PressLabel:
        on_press: cb._do_press()
        text: root.text
  
<SampBoxLayout>: 
    orientation: "vertical"
    padding: 10
    spacing: 10
   
    SimpleLabel: 
        text: "Gender"
        size_hint_x: 1
        font_size:20
  
    # creating box layout 
    BoxLayout: 
        # assigning orentation 
        orientation: "horizontal"
        height: 20
  
        BoxLayout: 
            orientation: "horizontal"
            size_hint_x: .22
  
            # label creation 
            SimpleLabel: 
                text: "Male"
                size_hint_x: .80
                font_size:30
            CheckBox: 
                color:.294, .761, .623
                on_active: root.checkbox_click(self, self.active) 
                size_hint_x: .20
  
            SimpleLabel: 
                text: "Female"
                size_hint_x: .80
                font_size:20
            CheckBox: 
                on_active: root.checkbox_click(self, self.active) 
                size_hint_x: .20
  
            SimpleLabel: 
                text: "Other"
                size_hint_x: .80
                font_size:10
            CheckBox: 
                on_active: root.checkbox_click(self, self.active) 
                size_hint_x: .20







<GenrePopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "GENRE"
    separator_color: .9,.4,.2,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/pixeljosh6"
    title_size: "20sp"
    GridLayout:
        cols: 4
        SimpleLabel:
            text: "GENRE"
        LabelCheckBox:
            text: "classical"
            group: "genres"
        LabelCheckBox:
            text: "pop"
            group: "genres"
        LabelCheckBox:
            text: "jazz"
            group: "genres"
        SimpleLabel:
            text: "OTHER"
        LabelCheckBox:
            text: "classical"
            group: "other"
        LabelCheckBox:
            text: "pop"
            group: "other"
        LabelCheckBox:
            text: "jazz"
            group: "other"

<MyButton@Button>:
    font_name: 'data/pixeljosh6'
    font_size: '20sp'
    background_color: 1, 0, 0, 1
    canvas.before:
        Color:
            rgba: .5, 1, 1, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<StartPopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "VOCAGEN"
    separator_color: .9,0,0,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/Ballsont"
    title_size: "100sp"
    BoxLayout:
        orientation: "vertical"
        MyButton:
            text: "START"
            on_release: root.dismiss()
        SimpleLabel:
            text: "an ashika, anders, jake production"


<IntroScreen>
    canvas:
        Rectangle:
            size: root.size
            source: self.image
    
    GridLayout:
        cols:1
        ImageButton:
            source: "data/mic.png"
            on_press: 
                self.source = "data/play.png"
                root.genre_popup.open()
            on_release: self.source = "data/mic.png"
        
    

        
        
        
        
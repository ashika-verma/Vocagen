<SimpleLabel>: 
    color: 1, 1, 1, 1
    font_name: 'data/pixeljosh6'
    font_size: '15sp'

<PressLabel@ButtonBehavior+Label>: 
    color: 1, 1, 1, 1
    font_name: 'data/pixeljosh6'
    font_size: '15sp'

<LabelCheckBox@BoxLayout>
    text: ''
    group: ''
    checkbox_click: print

    CheckBox:
        id: cb
        group: root.group
        on_active: root.checkbox_click(self, root.group, root.text, self.active) 
    PressLabel:
        on_press: cb._do_press()
        text: root.text

<CheckboxPopup>:
    size_hint: .7, .7
    auto_dismiss: True
    separator_color: .9,.4,.2,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/pixeljosh6"
    title_size: "20sp"


<VolumePopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "MIXER"
    separator_color: .9,.4,.2,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/pixeljosh6"
    title_size: "20sp"
    GridLayout:
        cols: 3
        SimpleLabel:
            text: "melody"
        Slider:
            id: melody
            min: 0
            max: 100
            step: 1
            orientation: 'horizontal'
            on_value: root.slider_callback("melody", melody.value)
        SimpleLabel:
            text: str(melody.value)


        SimpleLabel:
            text: "high voice"
        Slider:
            id: alto
            min: 0
            max: 3
            step: 1
            on_value: root.slider_callback("alto", alto.value)
            orientation: 'horizontal'
        SimpleLabel:
            text: str(alto.value)

        SimpleLabel:
            text: "mid voice"
        Slider:
            id: tenor
            min: 0
            max: 2
            step: 1
            on_value: root.slider_callback("tenor", tenor.value)
            orientation: 'horizontal'
        SimpleLabel:
            text: str(tenor.value)
        
        SimpleLabel:
            text: "low voice"
        Slider:
            id: bass
            min: 0
            max: 2
            on_value: root.slider_callback("bass", bass.value)
            step: 1
            orientation: 'horizontal'
        SimpleLabel:
            text: str(bass.value)
<RecordPopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "RECORD"
    separator_color: .9,.4,.2,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/pixeljosh6"
    title_size: "20sp"
    GridLayout:
        cols: 4
        Label:
        Label:
        Label:
        MyButton:
            text: "record"
            font_size: '15sp'
            on_press: 
                self.text="recording"
                root.record_callback()
            on_release: 
                self.text="record"
                root.record_callback()
        Label:
        Label:
        Label:
        MyButton:
            text: "play"
            font_size: '15sp'
            on_release: root.play_callback()
        


<MyButton@Button>:
    font_name: 'data/pixeljosh6'
    font_size: '20sp'
    background_color: 1, 0, 0, 1
    canvas.before:
        Color:
            rgba: .5, 1, 1, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<StartPopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "VOCAGEN"
    separator_color: .9,0,0,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/Ballsont"
    title_size: "100sp"
    BoxLayout:
        orientation: "vertical"
        MyButton:
            text: "START"
            on_release: root.dismiss()
        SimpleLabel:
            text: "an ashika, anders, jake production"

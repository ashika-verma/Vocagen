#:import Factory kivy.factory.Factory
#: import CheckBox kivy.uix.checkbox 
<SimpleLabel@Label>: 
    color: 1, 1, 1, 1
    font_name: 'data/pixeljosh6'
    font_size: '15sp'

<PressLabel@ButtonBehavior+Label>: 
    color: 1, 1, 1, 1
    font_name: 'data/pixeljosh6'
    font_size: '15sp'

<LabelCheckBox@BoxLayout>
    text: ''
    group: ''
    CheckBox:
        id: cb
        group: root.group
    PressLabel:
        on_press: cb._do_press()
        text: root.text

<GenrePopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "GENRE"
    separator_color: .9,.4,.2,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/pixeljosh6"
    title_size: "20sp"
    GridLayout:
        cols: 4
        SimpleLabel:
            text: "GENRE"
        LabelCheckBox:
            text: "classical"
            group: "genres"
        LabelCheckBox:
            text: "pop"
            group: "genres"
        LabelCheckBox:
            text: "jazz"
            group: "genres"
        SimpleLabel:
            text: "OTHER"
        LabelCheckBox:
            text: "classical"
            group: "other"
        LabelCheckBox:
            text: "pop"
            group: "other"
        LabelCheckBox:
            text: "jazz"
            group: "other"

<VolumePopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "MIXER"
    separator_color: .9,.4,.2,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/pixeljosh6"
    title_size: "20sp"
    GridLayout:
        cols: 3
        SimpleLabel:
            text: "melody"
        Slider:
            id: melody
            min: 0
            max: 100
            step: 1
            orientation: 'horizontal'
        SimpleLabel:
            text: str(melody.value)


        SimpleLabel:
            text: "high voice"
        Slider:
            id: alto
            min: 0
            max: 100
            step: 1
            orientation: 'horizontal'
        SimpleLabel:
            text: str(alto.value)

        SimpleLabel:
            text: "mid voice"
        Slider:
            id: tenor
            min: 0
            max: 100
            step: 1
            orientation: 'horizontal'
        SimpleLabel:
            text: str(tenor.value)
        
        SimpleLabel:
            text: "low voice"
        Slider:
            id: bass
            min: 0
            max: 100
            step: 1
            orientation: 'horizontal'
        SimpleLabel:
            text: str(bass.value)


<MyButton@Button>:
    font_name: 'data/pixeljosh6'
    font_size: '20sp'
    background_color: 1, 0, 0, 1
    canvas.before:
        Color:
            rgba: .5, 1, 1, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<StartPopup>:
    size_hint: .7, .7
    auto_dismiss: True
    title: "VOCAGEN"
    separator_color: .9,0,0,1
    title_color: 1, 0, 0, 1
    title_align: "center"
    title_font: "data/Ballsont"
    title_size: "100sp"
    BoxLayout:
        orientation: "vertical"
        MyButton:
            text: "START"
            on_release: root.dismiss()
        SimpleLabel:
            text: "an ashika, anders, jake production"


<IntroScreen>
    canvas:
        Rectangle:
            size: root.size
            source: self.image
    
    GridLayout:
        cols:1
        ImageButton:
            source: "data/mic.png"
            on_press: 
                self.source = "data/play.png"
                root.genre_popup.open()
            on_release: self.source = "data/mic.png"
        ImageButton:
            source: "data/mic.png"
            on_press: 
                self.source = "data/play.png"
                root.volume_popup.open()
            on_release: self.source = "data/mic.png"
        
    

        
        
        
        